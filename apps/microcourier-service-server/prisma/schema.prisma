datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime      @default(now())
  driverInfos DriverInfo[]
  email       String?       @unique
  firstName   String?
  id          String        @id @default(cuid())
  lastName    String?
  name        String?
  password    String
  phoneNumber String?
  role        EnumUserRole?
  roles       Json
  updatedAt   DateTime      @updatedAt
  username    String        @unique
}

model DeliveryRequest {
  createdAt       DateTime                     @default(now())
  customer        String?
  driver          String?
  dropoffLocation Json?
  id              String                       @id @default(cuid())
  itemDescription String?
  itemType        EnumDeliveryRequestItemType?
  payments        Payment[]
  pickupLocation  Json?
  status          EnumDeliveryRequestStatus?
  updatedAt       DateTime                     @updatedAt
}

model Payment {
  amount            Float?
  createdAt         DateTime           @default(now())
  customer          String?
  deliveryRequest   DeliveryRequest?   @relation(fields: [deliveryRequestId], references: [id])
  deliveryRequestId String?
  id                String             @id @default(cuid())
  paymentMethod     Json?
  status            EnumPaymentStatus?
  updatedAt         DateTime           @updatedAt
}

model DriverInfo {
  bankDetails       Json?
  createdAt         DateTime                @default(now())
  id                String                  @id @default(cuid())
  language          EnumDriverInfoLanguage?
  preferredPostcode String?
  updatedAt         DateTime                @updatedAt
  user              User?                   @relation(fields: [userId], references: [id])
  userId            String?
}

enum EnumUserRole {
  Option1
}

enum EnumDeliveryRequestItemType {
  Option1
}

enum EnumDeliveryRequestStatus {
  Option1
}

enum EnumPaymentStatus {
  Option1
}

enum EnumDriverInfoLanguage {
  Option1
}
